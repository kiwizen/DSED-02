<Window x:Class="MovieRentalWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MovieRentalWPF"
        mc:Ignorable="d"
        Title="DSED 02 Movie Rental System" Height="600" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Button Content="Customer Database" HorizontalAlignment="Left" Height="88" Margin="26,30,0,0" VerticalAlignment="Top" Width="194" FontSize="16" Click="OpenCustomerWindow"/>
        <Button Content="Movie Database" HorizontalAlignment="Left" Height="84" Margin="26,154,0,0" VerticalAlignment="Top" Width="194" FontSize="16" Click="OpenMovieWindow"/>
        <Button Content="Issue Movie" HorizontalAlignment="Left" Height="88" Margin="518,30,0,0" VerticalAlignment="Top" Width="188" FontSize="16" Click="IssueMovie"/>
        <Button Content="Return Movie" HorizontalAlignment="Left" Height="88" Margin="518,154,0,0" VerticalAlignment="Top" Width="188" FontSize="16" RenderTransformOrigin="0.511,2.278"/>
        <Button Content="Exit App" HorizontalAlignment="Left" VerticalAlignment="Top" Width="195" Margin="536,413,0,0" Height="41" Click="ExitApp"/>
    </Grid>
</Window>
